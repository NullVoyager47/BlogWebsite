---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import nerfProjectImage from '../assets/nerf-blaster.jpg';

const projects = [
	{
		title: "Nerf Motion Controller",
		description: "Creating a functional motion controller inside a Nerf blaster with enough controls to function as well as a standard controller. Features motion controls, joysticks, triggers, and buttons for gaming.",
		image: nerfProjectImage.src,
        status: "In Progress"
	},
	{
		title: "Interactive Plant Pot",
		description: "A plant pot that uses sensors to monitor soil moisture and light levels, providing feedback to the user via a digital screen.",
		image: "",
		status: "Planned"
	},
	{
		title: "Air mouse glove",
		description: "A glove that uses motion sensors to control the mouse cursor on a computer screen as well as provide left and right click and scroll functionality.",
		image: "",
		status: "Planned"
	},
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Projects - Rufus" description="My coding projects and experiments" />
	</head>
	<body>
		<Header />
		<main>
			<section class="projects-container">
				<h1>My Projects</h1>
				<p class="projects-intro">Here are some of the projects I've been working on:</p>
				
				<div class="projects-list">
					{projects.map((project) => (
						<article class="project-card">
							<div class="project-image">
								<img src={project.image} alt={project.title} />
								<span class={`status-badge status-${project.status.toLowerCase().replace(' ', '-')}`}>
									{project.status}
								</span>
							</div>
							<div class="project-content">
								<h2>{project.title}</h2>
								<p>{project.description}</p>
							</div>
						</article>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.projects-container {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	.projects-container h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		text-align: center;
	}

	.projects-intro {
		text-align: center;
		font-size: 1.1rem;
		margin-bottom: 3rem;
		color: #666;
	}

	.projects-list {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.project-card {
		display: flex;
		flex-direction: column;
		background: white;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		overflow: hidden;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.project-card:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
	}

	.project-image {
		position: relative;
		height: 200px;
		overflow: hidden;
	}

	.project-image img {
		width: 500px;
		height: 100%;
		object-fit: cover;
	}

	.status-badge {
		position: absolute;
		top: 1rem;
		right: 1rem;
		padding: 0.25rem 0.75rem;
		border-radius: 20px;
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.status-in-progress {
		background: #fef3c7;
		color: #92400e;
	}

	.status-planned {
		background: #dbeafe;
		color: #1e40af;
	}

	.status-completed {
		background: #d1fae5;
		color: #065f46;
	}

	.project-content {
		padding: 1.5rem;
	}

	.project-content h2 {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
		color: #1f2937;
	}

	.project-content p {
		color: #6b7280;
		line-height: 1.6;
		font-size: 0.95rem;
	}

	@media (min-width: 768px) {
		.project-card {
			flex-direction: row;
			align-items: center;
		}

		.project-image {
			width: 300px;
			height: 180px;
			flex-shrink: 0;
		}

		.project-content {
			flex: 1;
		}
	}

	/* Dark mode support */
	@media (prefers-color-scheme: dark) {
		.project-card {
			background: #1f2937;
		}

		.project-content h2 {
			color: #f9fafb;
		}

		.project-content p {
			color: #d1d5db;
		}

		.projects-intro {
			color: #9ca3af;
		}
	}
</style>
